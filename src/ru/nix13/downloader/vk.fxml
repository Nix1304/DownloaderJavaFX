<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="229.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ru.nix13.downloader.VKController">
    <children>
        <GridPane prefHeight="229.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="31.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#downloadFromGroupWall" prefHeight="27.0" prefWidth="306.0"
                        style="-fx-background-color: #3498db;" text="Download images from group wall" textFill="WHITE"/>
                <TextField fx:id="group_id" promptText="Enter url (ex. loliban)" GridPane.columnIndex="1"/>
                <Button layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#searchAndDownloadDocs"
                        prefHeight="27.0" prefWidth="306.0" style="-fx-background-color: #3498db;"
                        text="Search and download docs" textFill="WHITE" GridPane.rowIndex="1"/>
                <TextField fx:id="query" promptText="Query" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button layoutX="10.0" layoutY="43.0" mnemonicParsing="false" onAction="#downloadAllAlbums"
                        prefHeight="27.0" prefWidth="306.0" style="-fx-background-color: #3498db;"
                        text="Download all albums" textFill="WHITE" GridPane.rowIndex="7"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
